<LinearLayout android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:minHeight="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/primary"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/primary_dark"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done"
            android:padding="5dp"
            android:id="@+id/dialog_add_group_submit"
            />
        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="right"
            android:text="جستجو در میان گروه ها"
            android:id="@+id/dialog_add_group_subject"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


        <android.support.v7.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:focusable="true"
            android:layout_margin="15dp"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/dialog_add_group_search_et"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_searchbox"
                android:gravity="left"
                android:hint="@string/groups_hint"
                android:lines="1"
                android:padding="10dp"
                android:textSize="13sp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_magnifier"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:background="#fff"
                android:padding="5dp"
                android:id="@+id/dialog_add_group_search_icon"
                />
        </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/dialog_add_group_pb"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_add_group_list"
        android:background="#efefef"
        android:padding="5dp"
        android:visibility="invisible"
        />

</LinearLayout>
